<%= form_with(model: result, local: true) do |form| %>
  <% if result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
      <% result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :pecentage %>
    <%= form.text_field :pecentage %>
  </div>

  <div class="form-group">
    <%= form.label :grade %>
    <%= form.text_field :grade %>
  </div>

  <div class="form-group">
    <%= form.label :course_id, 'Course' %>
    <%= form.select :course_id, options_for_select(Course.all.map {|course| [course.name, course.id]}, selected: form.object.course_id), { include_blank: "Select Category" } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
